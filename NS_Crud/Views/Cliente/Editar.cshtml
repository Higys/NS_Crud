@model Cliente
@{
    ViewData["Title"] = "EditarCliente";
}

@*@section styles {
        <link rel="stylesheet" href="~/css/cliente.css"/>
    }*@


<div class="text-center">
    <div class="container">
        <h1>Editar Cliente</h1>



        <div class="col-md-4 container" style="display:flex; justify-content: center;">
            <form asp-action="EditarCliente" asp-route-id="Model.Id" style="width: 500px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id"/>

                <div class="form-group container" style="display:flex; flex-direction:row; width: 400px; ">
                    <label asp-for="Nome" class="control-label" style="margin-top: 5px;padding-right: 10px;"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="container" style="display: flex; justify-content: center;">

                    <div class="form-group container" style="display:flex; flex-direction:row; width: 150px; ">
                        <label asp-for="Idade" class="control-label" style="margin-top: 5px;padding-right: 10px;"></label>
                        <input asp-for="Idade" class="form-control" />
                        <span asp-validation-for="Idade" class="text-danger"></span>
                    </div>

                    <div class="form-group container" style="display:flex; flex-direction:row; width: 230px; padding-left:0px; ">
                        <label asp-for="Sexo" class="control-label" style="margin-top: 5px; padding-right: 10px;"></label>
                        <select asp-for="Sexo" class="form-control">
                            <option value="">Selecione o Sexo</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group container" style="display:flex; flex-direction:row; width: 300px; ">
                    <label asp-for="Cpf" class="control-label" style="margin-top: 5px;padding-right: 10px;"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-secondary" />
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Cliente")'">Voltar</button>

                </div>
                <div class="form-group">
                </div>
            </form>



        </div>
    </div>

</div>



