@model Filme
@{
    ViewData["Title"] = "EditarFilme";
}



<div class="text-center">
    <div class="container">
        <h1>Editar Filme</h1>



        <div class="col-md-4 container" style="display:flex; justify-content: center;">
            <form asp-action="EditarFilme" asp-route-id="Model.Id" style="width: 500px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group container" style="display:flex; flex-direction:row; width: 400px; ">
                    <label asp-for="Titulo" class="control-label" style="margin-top: 5px;padding-right: 10px;"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="container" style="display: flex; justify-content: center;">

                    <div class="container" style="display: flex; flex-direction: row; justify-content: space-between;">
                        <div class="form-group container" style="display:flex; flex-direction:row; padding-left:0px; ">
                            <label asp-for="Qtd_Copias" class="control-label" style="padding-right: 10px;">Quantidade de Copias</label>
                            <input asp-for="Qtd_Copias" class="form-control" style="width: 70px;" />
                            <span asp-validation-for="Qtd_Copias" class="text-danger"></span>
                        </div>


                        <div class="form-group container" style="display:flex; flex-direction:row; ">
                            <label asp-for="Qtd_Disponiveis" class="control-label" style="padding-right: 10px; ">Quantidade Disponivel</label>
                            <input asp-for="Qtd_Disponiveis" class="form-control" style="width: 70px;" />
                            <span asp-validation-for="Qtd_Disponiveis" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group container" style="display:flex; flex-direction:row; ">
                    <label asp-for="ValorLocacao" class="control-label" style="padding-right: 10px;">Valor da Locação</label>
                    <input asp-for="ValorLocacao" class="form-control" style="width: 100px;" />
                    <span asp-validation-for="ValorLocacao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-secondary" />
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Filme")'">Voltar</button>

                </div>
                <div class="form-group">
                </div>
            </form>



        </div>
    </div>

</div>



